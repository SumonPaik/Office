<%- include('partial/header') %>

<div style="margin-top: 10px; padding: 0px 15%;">
    <div class="signup login-form">
        <form action="/user" method="post" >
            <div style="display: flex; flex-wrap: wrap; justify-content: space-evenly; align-items: center;">
                <div style="width: 30%; padding: 5px 10px;">
                    <div>
                        <label id="form-label" for="username" style="font-weight: bold;">User Name</label>
                    <input id="form-input" type="text" id="username" name="username" value="<%= formData.username %>" placeholder="Enter Username.." required>
                    </div>
                    <div>
                        <label id="form-label" for="email" style="font-weight: bold;">Email</label>
                        <input id="form-input" type="email" id="email" name="email" value="<%= formData.email %>" placeholder="Enter Email.." required>
                    </div>
                </div>
                <div style="width: 30%; padding: 5px 10px;">
                    <div>
                        <label id="form-label" for="password" style="font-weight: bold;">Password</label>
                        <input id="form-input" type="password" id="password" name="password" placeholder="Enter Password.." required>
                    </div>
                    <div>
                        <label id="form-label" for="confirmPassword" style="font-weight: bold;">Confirm Password</label>
                        <input id="form-input" type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password.." required>
                        
                    </div> 
                </div>                
                <div style="width: 20%; padding: 5px 10px;">
                    <div>
                        <label id="form-label" for="role" style="font-weight: bold;">User Type</label>
                        <select id="form-input" name="role" id="role">
                            <option value="user">User</option>
                            <option value="admin">Admin</option>
                        </select>
                    </div>
                    <div>
                        <br>
                        <button style="margin-left: 30px;" class="btn btn-success" type="submit">Create User</button>
                    </div>
                </div>
                <div  style="width: 50%; min-height: 50px;">
                    <% if (error && error.length > 0) { %>
                        <p style="color: #fc2727; padding: 5px 0;"><%= error %></p>
                    <% } %>
                </div>
            </div>     
        </form>
        <div style="border: 1px solid #AAA;">
            <h5 style="background-color: rgb(194, 250, 231); padding: 5px 8px; margin-bottom: 0;">User Information</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Created on</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>User Type</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.createdAt.toDateString() %></td>
                            <td><%= user.username %></td>
                            <td><%= user.email %></td>
                            <td><%= user.role %></td>
                            <form action="/user/<%= user._id %>/delete" method="post">
                                <td><button class="btn btn-warning" type="submit" name="edit" value="edit">Edit</button></td>
                                <td><button class="btn btn-danger" type="submit" name="delete" value="delete">Delete</button></td>
                            </form>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>



<%- include('partial/footer') %>