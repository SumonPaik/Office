<%- include('partial/header') %>

<div class="login">
    <h2>Sign In</h2>
    <div class="signup login-form">
        <form action="" method="post">
            <label id="form-label" for="username" style="font-weight: bold;">User Name</label>
            <input id="form-input" type="text" id="username" name="username" placeholder="Your Username.." required>

            <label id="form-label" for="email" style="font-weight: bold;">Email</label>
            <input id="form-input" type="email" id="email" name="email" placeholder="Your Email.." required>
<!-- 
            <label id="form-label" for="mobile" style="font-weight: bold;">Mobile No.</label>
            <input id="form-input" type="number" id="mobile" name="mobile" placeholder="Mobile No.." required> -->

            <div>
                <label id="form-label" for="role" style="font-weight: bold;">User Type</label>
                <select id="form-input" name="role" id="role">
                    <option value="user">User</option>
                    <option value="admin">Admin</option>
                </select>
            </div>
            
            <label id="form-label" for="password" style="font-weight: bold;">Password</label>
            <input id="form-input" type="text" id="password" name="password" placeholder="Your Password.." required>

            <div>
                <%= error %>
            </div>

            <button class="btn" onclick="signup()">Login</button>
        </form>
    </div>
</div>

<%- include('partial/footer') %>